<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;1,100;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="stylesheet" href="/stylesheets/index.css" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <title>Document</title>
</head>
<body>
  <div class="Container">
    <h1 class="Title">To Do List </h1>
    <!-- Se captura los elementos (input, button) en un formulario  por id-->
    <form class="ToDoListForm" id="ToDoListForm" action="">
      <input 
      type="text"
      id="input"
      class="ToDoListInput"
      placeholder="Add your new task"
      autofocus>
      <button type="submit">Add</button>
    </form>
    <!-- Se agrega un div donde iran las futuras tareas a agregar -->
    <div id="TaskList">
      <div>No Tasks</div>
    </div>
  </div>

  <!-- Animacion -->
  <div class="wavesContainer">
    <div class="wave wave1"></div>
    <div class="wave wave2"></div>
    <div class="wave wave3"></div>
    <div class="wave wave4"></div>
  </div>

  <!-- El template modelo de cada tarea que se agregara -->
  <template id="Template">
    <div class="EachTask warning">
      <p>Task</p>
      <h3>
        <i class="fas fa-check-circle" role="button"></i>
        <i class="fas fa-undo-alt" role="button"></i>
        <i class="fas fa-minus-circle" role="button"></i>
      </h3>
    </div>
  </template>
  
  <script src="/javascripts/helper.js"></script>
</body>
</html>
